<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">

    <android.support.v7.widget.Toolbar
        android:id="@+id/activity_recyclerview_refresh_autoloadmore_toolbar"
        android:layout_width="match_parent"
        android:layout_height="@dimen/toolbar_height"
        android:background="@color/common_style_blue"
        app:theme="@style/ToolBar.Theme"
        app:title="RecyclerView的刷新和自动加载"
        app:titleTextAppearance="@style/ToolBar.Base.Title" />

    <android.support.v4.widget.SwipeRefreshLayout
        android:id="@+id/activity_recyclerview_refresh_autoloadmore_swipeRefreshLayout"
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <android.support.v7.widget.RecyclerView
            android:id="@+id/activity_recyclerview_refresh_autoloadmore_recyclerView"
            android:layout_width="match_parent"
            android:layout_height="match_parent" />

    </android.support.v4.widget.SwipeRefreshLayout>

</LinearLayout>