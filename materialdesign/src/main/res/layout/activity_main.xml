<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:cardview="http://schemas.android.com/apk/res-auto"
    xmlns:toolbar="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/activity_main"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:gravity="center_horizontal"
    android:orientation="vertical"
    tools:context="com.jalen.materialdesign.MainActivity">

    <android.support.v7.widget.Toolbar
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:background="@color/common_style_blue"
        toolbar:elevation="10dp"
        toolbar:title="@string/app_name"
        toolbar:titleTextColor="@color/common_style_white" />

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical">

            <android.support.v7.widget.CardView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                cardview:cardBackgroundColor="@color/common_style_white"
                cardview:cardCornerRadius="@dimen/card_view_corner_radius"
                cardview:cardElevation="@dimen/card_view_elevation"
                cardview:cardMaxElevation="@dimen/card_view_max_elevation"
                cardview:cardPreventCornerOverlap="true"
                cardview:cardUseCompatPadding="true"
                cardview:contentPadding="@dimen/card_view_content_padding">

                <RelativeLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:background="@color/white">

                    <TextView
                        android:id="@+id/tv_label_tab"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:background="@drawable/shape_circle_green"
                        android:gravity="center"
                        android:text="Toolbar"
                        android:textColor="@color/white" />

                    <Button
                        android:id="@+id/btn_tab_top"
                        style="?borderlessButtonStyle"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_toRightOf="@+id/tv_label_tab"
                        android:gravity="left|center_vertical"
                        android:onClick="onClickToolbarBasicUse"
                        android:text="Toolbar的基本使用"
                        android:textAllCaps="false" />
                </RelativeLayout>
            </android.support.v7.widget.CardView>

            <android.support.v7.widget.CardView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                cardview:cardBackgroundColor="@color/common_style_white"
                cardview:cardCornerRadius="@dimen/card_view_corner_radius"
                cardview:cardElevation="@dimen/card_view_elevation"
                cardview:cardMaxElevation="@dimen/card_view_max_elevation"
                cardview:cardPreventCornerOverlap="true"
                cardview:cardUseCompatPadding="true"
                cardview:contentPadding="@dimen/card_view_content_padding">

                <RelativeLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:background="@color/white">

                    <TextView
                        android:id="@+id/tv_1"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:background="@drawable/shape_circle_green"
                        android:gravity="center"
                        android:text="Snackbar"
                        android:textColor="@color/white" />

                    <Button
                        android:id="@+id/btn_tab_1"
                        style="?borderlessButtonStyle"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_toRightOf="@+id/tv_1"
                        android:gravity="left|center_vertical"
                        android:onClick="onClickSnackbar"
                        android:text="Snackbar的基本使用"
                        android:textAllCaps="false" />

                </RelativeLayout>
            </android.support.v7.widget.CardView>


            <android.support.v7.widget.CardView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                cardview:cardBackgroundColor="@color/common_style_white"
                cardview:cardCornerRadius="@dimen/card_view_corner_radius"
                cardview:cardElevation="@dimen/card_view_elevation"
                cardview:cardMaxElevation="@dimen/card_view_max_elevation"
                cardview:cardPreventCornerOverlap="true"
                cardview:cardUseCompatPadding="true"
                cardview:contentPadding="@dimen/card_view_content_padding">

                <RelativeLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:background="@color/white">

                    <TextView
                        android:id="@+id/tv_2"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:background="@drawable/shape_circle_green"
                        android:gravity="center"
                        android:text="FAB"
                        android:textColor="@color/white" />

                    <Button
                        android:id="@+id/btn_2"
                        style="?borderlessButtonStyle"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_toRightOf="@+id/tv_2"
                        android:gravity="left|center_vertical"
                        android:onClick="onClickFloatingActionButton"
                        android:text="FloatingActionButton 的基本使用"
                        android:textAllCaps="false" />
                </RelativeLayout>
            </android.support.v7.widget.CardView>


            <android.support.v7.widget.CardView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                cardview:cardBackgroundColor="@color/common_style_white"
                cardview:cardCornerRadius="@dimen/card_view_corner_radius"
                cardview:cardElevation="@dimen/card_view_elevation"
                cardview:cardMaxElevation="@dimen/card_view_max_elevation"
                cardview:cardPreventCornerOverlap="true"
                cardview:cardUseCompatPadding="true"
                cardview:contentPadding="@dimen/card_view_content_padding">

                <RelativeLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:background="@color/white">

                    <TextView
                        android:id="@+id/tv_3"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:background="@drawable/shape_circle_green"
                        android:gravity="center"
                        android:text="AppBar"
                        android:textColor="@color/white" />

                    <Button
                        android:id="@+id/btn_3"
                        style="?borderlessButtonStyle"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_toRightOf="@+id/tv_3"
                        android:gravity="left|center_vertical"
                        android:onClick="onClickAppBarLayout"
                        android:text="AppBarLayout 的使用"
                        android:textAllCaps="false" />
                </RelativeLayout>
            </android.support.v7.widget.CardView>


            <android.support.v7.widget.CardView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                cardview:cardBackgroundColor="@color/common_style_white"
                cardview:cardCornerRadius="@dimen/card_view_corner_radius"
                cardview:cardElevation="@dimen/card_view_elevation"
                cardview:cardMaxElevation="@dimen/card_view_max_elevation"
                cardview:cardPreventCornerOverlap="true"
                cardview:cardUseCompatPadding="true"
                cardview:contentPadding="@dimen/card_view_content_padding">

                <RelativeLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:background="@color/white">

                    <TextView
                        android:id="@+id/tv_4"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:background="@drawable/shape_circle_green"
                        android:gravity="center"
                        android:text="Dialog"
                        android:textColor="@color/white" />

                    <Button
                        android:id="@+id/btn_4"
                        style="?borderlessButtonStyle"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_toRightOf="@+id/tv_4"
                        android:gravity="left|center_vertical"
                        android:onClick="onClickBottomSheetDialog"
                        android:text="BottomSheetDialog 的基本使用"
                        android:textAllCaps="false" />

                </RelativeLayout>
            </android.support.v7.widget.CardView>


            <android.support.v7.widget.CardView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                cardview:cardBackgroundColor="@color/common_style_white"
                cardview:cardCornerRadius="@dimen/card_view_corner_radius"
                cardview:cardElevation="@dimen/card_view_elevation"
                cardview:cardMaxElevation="@dimen/card_view_max_elevation"
                cardview:cardPreventCornerOverlap="true"
                cardview:cardUseCompatPadding="true"
                cardview:contentPadding="@dimen/card_view_content_padding">

                <RelativeLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:background="@color/white">

                    <TextView
                        android:id="@+id/tv_5"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:background="@drawable/shape_circle_green"
                        android:gravity="center"
                        android:text="Tab"
                        android:textColor="@color/white" />

                    <Button
                        android:id="@+id/btn_5"
                        style="?borderlessButtonStyle"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_toRightOf="@+id/tv_5"
                        android:gravity="left|center_vertical"
                        android:onClick="onClickTabLayoutTop"
                        android:text="TabLayout 顶部标签页"
                        android:textAllCaps="false" />

                    <Button
                        style="?borderlessButtonStyle"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_alignLeft="@id/btn_5"
                        android:layout_below="@id/tv_5"
                        android:layout_toRightOf="@id/tv_5"
                        android:gravity="left|center_vertical"
                        android:onClick="onClickTabLayoutBottom"
                        android:text="TabLayout 底部菜单页"
                        android:textAllCaps="false" />

                </RelativeLayout>
            </android.support.v7.widget.CardView>


            <android.support.v7.widget.CardView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                cardview:cardBackgroundColor="@color/common_style_white"
                cardview:cardCornerRadius="@dimen/card_view_corner_radius"
                cardview:cardElevation="@dimen/card_view_elevation"
                cardview:cardMaxElevation="@dimen/card_view_max_elevation"
                cardview:cardPreventCornerOverlap="true"
                cardview:cardUseCompatPadding="true"
                cardview:contentPadding="@dimen/card_view_content_padding">

                <RelativeLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:background="@color/white">

                    <TextView
                        android:id="@+id/tv_6"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:background="@drawable/shape_circle_green"
                        android:gravity="center"
                        android:text="Recycler"
                        android:textColor="@color/white" />

                    <Button
                        android:id="@+id/btn_6"
                        style="?borderlessButtonStyle"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_toRightOf="@+id/tv_6"
                        android:gravity="left|center_vertical"
                        android:onClick="onClickRecyclerViewLinear"
                        android:text="RecyclerView Linear"
                        android:textAllCaps="false" />

                </RelativeLayout>
            </android.support.v7.widget.CardView>


            <android.support.v7.widget.CardView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                cardview:cardBackgroundColor="@color/common_style_white"
                cardview:cardCornerRadius="@dimen/card_view_corner_radius"
                cardview:cardElevation="@dimen/card_view_elevation"
                cardview:cardMaxElevation="@dimen/card_view_max_elevation"
                cardview:cardPreventCornerOverlap="true"
                cardview:cardUseCompatPadding="true"
                cardview:contentPadding="@dimen/card_view_content_padding">

                <RelativeLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:background="@color/white">

                    <TextView
                        android:id="@+id/tv_7"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:background="@drawable/shape_circle_green"
                        android:gravity="center"
                        android:text="Drawer"
                        android:textColor="@color/white" />

                    <Button
                        android:id="@+id/btn_7"
                        style="?borderlessButtonStyle"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_toRightOf="@+id/tv_7"
                        android:gravity="left|center_vertical"
                        android:onClick="onClickDrawerLayoutSimple"
                        android:text="DrawerLayout的基本使用"
                        android:textAllCaps="false" />

                    <Button
                        style="?borderlessButtonStyle"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_below="@id/tv_7"
                        android:layout_toRightOf="@+id/tv_7"
                        android:gravity="left|center_vertical"
                        android:onClick="onClickDrawerLayoutAnimation"
                        android:text="DrawerLayout的title动画"
                        android:textAllCaps="false" />

                </RelativeLayout>

            </android.support.v7.widget.CardView>

        </LinearLayout>

    </ScrollView>


</LinearLayout>
