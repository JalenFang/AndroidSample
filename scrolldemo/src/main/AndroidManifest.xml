<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="com.jalen.scrolldemo">

    <application
        android:allowBackup="true"
        android:icon="@mipmap/ic_launcher"
        android:label="@string/app_name"
        android:supportsRtl="true"
        android:theme="@style/AppTheme">
        <activity android:name=".MainActivity">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <activity android:name=".activity.LayoutActivity" />
        <activity android:name=".activity.OffSetActivity" />
        <activity android:name=".activity.LayoutParamsActivity" />
        <activity android:name=".activity.ScrollToActivity" />
        <activity android:name=".activity.ScrollByActivity" />
        <activity android:name=".activity.ScrollerActivity" />
    </application>

</manifest>