<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/activity_main"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    tools:context="com.jalen.scrolldemo.MainActivity">

    <Button
        android:id="@+id/activity_main_btn_layout"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="layout"
        android:textAllCaps="false" />

    <Button
        android:id="@+id/activity_main_btn_offset"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="offset"
        android:textAllCaps="false" />

    <Button
        android:id="@+id/activity_main_btn_LayoutParams"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="LayoutParams"
        android:textAllCaps="false" />

    <Button
        android:id="@+id/activity_main_btn_To_by"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="scrollTo与ScrollBy"
        android:textAllCaps="false" />

    <Button
        android:id="@+id/activity_main_btn_Scroller"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Scroller"
        android:textAllCaps="false" />

    <Button
        android:id="@+id/activity_main_btn_ViewDragHelper"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="ViewDragHelper"
        android:textAllCaps="false" />

    <Button
        android:id="@+id/activity_main_btn_animation"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="动画"
        android:textAllCaps="false" />

</LinearLayout>
