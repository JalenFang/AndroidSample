<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">

    <include layout="@layout/toolbar" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">

        <Button
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_margin="10dp"
            android:onClick="onClickTransitionAddTargetStartAnimator"
            android:padding="10dp"
            android:text="开始动画" />

        <Button
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_margin="10dp"
            android:onClick="onClickTransitionAddTargetPauseAnimator"
            android:padding="10dp"
            android:text="暂停动画" />

        <Button
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_margin="10dp"
            android:onClick="onClickTransitionAddTargetCancelAnimator"
            android:padding="10dp"
            android:text="取消动画" />

    </LinearLayout>


    <FrameLayout
        android:id="@+id/activity_transition_add_target_fl_rootview"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <include layout="@layout/scene1" />
    </FrameLayout>

</LinearLayout>