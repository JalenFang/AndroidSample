<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/common_style_bg"
    android:orientation="vertical">

    <TextView
        android:id="@+id/activity_show_view_tv_title"
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:gravity="center"
        android:textColor="@color/common_style_bule"
        android:textSize="@dimen/text_17sp" />

    <View style="@style/common_horizontal_line_style" />

    <LinearLayout
        android:id="@+id/activity_show_view_ll_container"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:gravity="center"
        android:orientation="vertical" />
</LinearLayout>