<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">

    <FrameLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:background="@drawable/shape_half_circle_gray"
        android:gravity="center">

        <ImageView
            android:id="@+id/view_score_rank_check_2_iv_bg"
            android:layout_width="165dp"
            android:layout_height="32dp"
            android:background="@drawable/shape_cash_score" />

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:gravity="center"
            android:orientation="horizontal">

            <TextView
                android:id="@+id/view_score_rank_check_2_tv_all_company"
                android:layout_width="165dp"
                android:layout_height="32dp"
                android:ellipsize="end"
                android:gravity="center"
                android:maxLines="1"
                android:text="全公司"
                android:textColor="#FFFFFF"
                android:textSize="17sp" />

            <TextView
                android:id="@+id/view_score_rank_check_2_tv_direct_follower"
                android:layout_width="165dp"
                android:layout_height="32dp"
                android:ellipsize="end"
                android:gravity="center"
                android:maxLines="1"
                android:text="直接下属"
                android:textColor="#000000"
                android:textSize="17sp" />

        </LinearLayout>

    </FrameLayout>


</LinearLayout>